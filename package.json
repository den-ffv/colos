{
  "name": "colos-logistics-platform",
  "version": "1.0.0",
  "description": "Full-stack logistics platform with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:client": "cd client && pnpm run dev",
    "dev:server": "cd server && pnpm run dev",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build",
    "start": "concurrently \"pnpm run start:server\" \"pnpm run start:client\"",
    "start:client": "cd client && pnpm run preview",
    "start:server": "cd server && pnpm run start",
    "test": "concurrently \"pnpm run test:client\" \"pnpm run test:server\"",
    "test:client": "cd client && pnpm run test",
    "test:server": "cd server && pnpm run test",
    "docker:build": "docker build -t colos-logistics .",
    "docker:run": "docker run -p 80:80 -p 3000:3000 colos-logistics",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
